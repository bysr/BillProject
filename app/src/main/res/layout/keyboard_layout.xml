<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@color/bill_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/bill_background"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView
            android:id="@+id/tv_date_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:drawableLeft="@mipmap/riqi"
            android:drawablePadding="@dimen/margin_5dp"
            android:text="2017-11-7"
            android:textColor="@color/black"
            android:textSize="@dimen/one_eight_sp" />

        <TextView
            android:id="@+id/tv_remark_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:hint="@string/add_remark"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/two_zero_sp" />
    </LinearLayout>

    <View style="@style/gray_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/keyboard_income"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="收"
                android:textColor="@color/black"
                android:textSize="@dimen/two_zero_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="入"
                android:textColor="@color/black"
                android:textSize="@dimen/two_zero_sp" />

        </LinearLayout>

        <View style="@style/gray_line_vertical"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/keyboard_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="@dimen/two_zero_sp" />

            </RelativeLayout>

            <View style="@style/gray_line"></View>

            <RelativeLayout
                android:id="@+id/keyboard_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/two_zero_sp" />

            </RelativeLayout>


        </LinearLayout>

        <View style="@style/gray_line_vertical"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/keyboard_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/two_zero_sp" />

            </RelativeLayout>

            <View style="@style/gray_line"></View>

            <RelativeLayout
                android:id="@+id/keyboard_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/two_zero_sp" />

            </RelativeLayout>
        </LinearLayout>

        <View style="@style/gray_line_vertical"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/keyboard_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="@dimen/two_zero_sp" />

            </RelativeLayout>

            <View style="@style/gray_line"></View>

            <RelativeLayout
                android:id="@+id/keyboard_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/two_zero_sp" />

            </RelativeLayout>
        </LinearLayout>

        <View style="@style/gray_line_vertical"></View>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/keyboard_del"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="C"
                    android:textColor="@color/black"
                    android:textSize="@dimen/two_zero_sp" />

            </RelativeLayout>

            <View style="@style/gray_line"></View>

            <RelativeLayout
                android:id="@+id/keyboard_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="@dimen/two_zero_sp" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


    <View style="@style/gray_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/keyboard_expend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="支"
                android:textColor="@color/black"
                android:textSize="@dimen/two_zero_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="出"
                android:textColor="@color/black"
                android:textSize="@dimen/two_zero_sp" />

        </LinearLayout>

        <View style="@style/gray_line_vertical"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/keyboard_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/two_zero_sp" />

                </RelativeLayout>

                <View style="@style/gray_line_vertical"></View>

                <RelativeLayout
                    android:id="@+id/keyboard_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/two_zero_sp" />

                </RelativeLayout>

                <View style="@style/gray_line_vertical"></View>

                <RelativeLayout
                    android:id="@+id/keyboard_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/two_zero_sp" />

                </RelativeLayout>

                <View style="@style/gray_line_vertical"></View>

                <RelativeLayout
                    android:id="@+id/keyboard_minus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="@dimen/two_zero_sp" />

                </RelativeLayout>

            </LinearLayout>

            <View style="@style/gray_line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/keyboard_point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="."
                        android:textColor="@color/black"
                        android:textSize="@dimen/two_zero_sp" />

                </RelativeLayout>

                <View style="@style/gray_line_vertical"></View>

                <RelativeLayout
                    android:id="@+id/keyboard_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/two_zero_sp" />

                </RelativeLayout>

                <View style="@style/gray_line_vertical"></View>

                <RelativeLayout

                    android:id="@+id/keyboard_finish"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tv_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="完成"
                        android:textColor="@color/yellow_gray"
                        android:textSize="@dimen/two_zero_sp" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>